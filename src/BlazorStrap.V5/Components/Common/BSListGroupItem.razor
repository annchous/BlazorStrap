@inherits BlazorStrap.Shared.Components.Common.BSListGroupItemBase
@namespace BlazorStrap.V5

@if (!string.IsNullOrEmpty(Url))
{
    <a href="@Url" class="@ClassBuilder" @onclick="ClickEvent" @onclick:preventDefault="PreventDefault">@ChildContent</a>
}
else if (IsButton)
{
    <button type="button" class="@ClassBuilder" @onclick="ClickEvent" @onclick:preventDefault="PreventDefault">@ChildContent</button>
}
else
{
    <li class="@ClassBuilder" @attributes="Attributes">
        @ChildContent
    </li>
}