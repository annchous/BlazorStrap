@namespace BlazorStrap.V5
@inherits BlazorStrap.Shared.Components.Content.BSImageBase

@if (!IsPlaceholder)
{
    <img src="@Source" class="@ClassBuilder" @attributes="Attributes"/>
}
else
{
    
    <svg class="@ClassBuilder" width="@PlaceHolderWidth" height="@PlaceHolderHeight" style="font-size: 1.25rem;text-anchor: middle" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: @(PlaceHolderWidth)x@(PlaceHolderHeight)" preserveAspectRatio="xMidYMid slice" focusable="false">
    <rect width="100%" height="100%" fill="#868e96"></rect>
    <text x="50%" y="50%" fill="#dee2e6" dy=".3em">@(PlaceHolderText)</text>
    </svg>
}